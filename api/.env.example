# VedAstroPy API Environment Variables
# =====================================
# Copy this to .env and fill in your values

# Storage Backend (set to "true" for Azure Cosmos DB, "false" for in-memory)
USE_COSMOS_DB=false

# Azure Cosmos DB Configuration (only needed if USE_COSMOS_DB=true)
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-primary-key-here
COSMOS_DATABASE=VedAstro
COSMOS_CONTAINER=PsychicProfiles

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
